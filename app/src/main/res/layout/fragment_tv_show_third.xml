<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.tvshow.TvShowThirdFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary_color">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary_color"
            android:orientation="vertical">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/thirdTvShowPoster"
                android:layout_width="match_parent"
                android:layout_height="405dp"
                android:scaleType="fitXY" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-28dp"
                android:padding="10dp"
                android:background="@drawable/outline_second_movie_style"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/thirdTvShowTitle"
                        android:layout_width="320dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:textSize="30sp"
                        android:textColor="@color/text_color"
                        android:fontFamily="@font/worksans_medium"
                        android:maxLines="3"/>

                    <ImageButton
                        android:id="@+id/thirdTvShowSaved"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:backgroundTint="@color/primary_color"
                        android:src="@drawable/ic_save"
                        android:layout_gravity="end|center_vertical"
                        android:contentDescription="@string/saved_button_txt_second" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text=" First Air Date"
                            android:textSize="15sp"
                            android:textColor="@color/text_color"
                            android:fontFamily="@font/worksans_light"
                            android:drawableStart="@drawable/ic_date"
                            android:maxLines="3"/>

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/thirdTvShowFirstAirDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="- 1998/10/4"
                            android:textSize="15sp"
                            android:textColor="@color/text_color"
                            android:fontFamily="@font/worksans_medium"
                            android:maxLines="3"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text=" Last Air Date"
                            android:textSize="15sp"
                            android:textColor="@color/text_color"
                            android:fontFamily="@font/worksans_light"
                            android:drawableStart="@drawable/ic_date"
                            android:maxLines="3"/>

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/thirdTvShowLastAirDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="- 1998/10/4"
                            android:textSize="15sp"
                            android:textColor="@color/text_color"
                            android:fontFamily="@font/worksans_medium"
                            android:maxLines="3"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text=" Run Time per Episode"
                            android:textSize="15sp"
                            android:textColor="@color/text_color"
                            android:fontFamily="@font/worksans_light"
                            android:drawableStart="@drawable/ic_release_date"
                            android:maxLines="3"/>

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/thirdTvShowEpisodeRunTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="- 60 min"
                            android:textSize="15sp"
                            android:textColor="@color/text_color"
                            android:fontFamily="@font/worksans_medium"
                            android:maxLines="3"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text=" Number of Seasons"
                            android:textSize="15sp"
                            android:textColor="@color/text_color"
                            android:fontFamily="@font/worksans_light"
                            android:drawableStart="@drawable/ic_numbers"
                            android:maxLines="3"/>

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/thirdTvShowNumberOfSeasons"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="- 8"
                            android:textSize="15sp"
                            android:textColor="@color/text_color"
                            android:fontFamily="@font/worksans_medium"
                            android:maxLines="3"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text=" Number of Episodes"
                            android:textSize="15sp"
                            android:textColor="@color/text_color"
                            android:fontFamily="@font/worksans_light"
                            android:drawableStart="@drawable/ic_numbers"
                            android:maxLines="3"/>

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/thirdTvShowNumberOfEpisodes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="- 70"
                            android:textSize="15sp"
                            android:textColor="@color/text_color"
                            android:fontFamily="@font/worksans_medium"
                            android:maxLines="3"/>

                    </LinearLayout>

                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:orientation="horizontal">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/thirdTvShowGenre1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background = "@drawable/outline_genre_style"
                        android:paddingStart="7dp"
                        android:paddingEnd="7dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:textAllCaps="false"
                        android:layout_marginEnd="10dp"
                        android:textColor="@color/text_color"
                        android:textSize="11sp"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/thirdTvShowGenre2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background = "@drawable/outline_genre_style"
                        android:paddingStart="7dp"
                        android:paddingEnd="7dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:textAllCaps="false"
                        android:layout_marginEnd="10dp"
                        android:textColor="@color/text_color"
                        android:textSize="11sp"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/thirdTvShowGenre3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background = "@drawable/outline_genre_style"
                        android:paddingStart="7dp"
                        android:paddingEnd="7dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:textAllCaps="false"
                        android:layout_marginEnd="10dp"
                        android:textColor="@color/text_color"
                        android:textSize="11sp"/>

                </LinearLayout>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:text="Overview"
                    android:textColor="@color/text_color"
                    android:textSize="25sp"
                    android:fontFamily="@font/worksans_regular"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/thirdTvShowDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/text_color"
                    android:textSize="15sp"
                    android:fontFamily="@font/worksans_light"/>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_gravity="center_horizontal"
                    android:text="Seasons"
                    android:textColor="@color/text_color"
                    android:textSize="28sp"
                    android:fontFamily="@font/worksans_regular"/>

                <View
                    android:layout_width="60dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="4dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/divider_now_playing_style" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvTvShowSeasons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    tools:listitem="@layout/tv_seasons_rv"/>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_gravity="center_horizontal"
                    android:text="Creators"
                    android:textColor="@color/text_color"
                    android:textSize="25sp"
                    android:fontFamily="@font/worksans_regular"/>

                <View
                    android:layout_width="60dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="4dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/divider_now_playing_style" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvTvShowCreators"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/tv_creators_rv"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnTvShowGetMoreDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_gravity="center"
                    android:padding="15dp"
                    android:text="See More Details"
                    android:textColor="@color/secondary_color"
                    android:textSize="20sp"
                    android:textAllCaps="true"
                    android:fontFamily="@font/worksans_bold"
                    app:cornerRadius="30dp"
                    android:shadowColor="@color/teal_200"
                    app:rippleColor="@color/secondary_color"
                    app:elevation="30dp"
                    app:backgroundTint="@color/black"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</com.google.android.material.card.MaterialCardView>